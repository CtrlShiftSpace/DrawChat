  var router = angular.module('drawchatRouter', []);
  router.config([
    '$routeProvider',
    function($routeProvider){
      $routeProvider.
      when("/drawings", {
        templateUrl: "<%= asset_path('angular/templates/drawings/index.html') %>",
        controller: 'drawingsController',
        controllerAs: 'drawingsCtrl'
      }).
      when("/drawings/:id", {
        templateUrl: "<%= asset_path('angular/templates/drawings/show.html') %>",
        controller: 'drawingController',
        controllerAs:  'drawingCtrl'
      }).
      // when("/drawchats/:id", {
